<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="SmokeTests" parallel="none" thread-count="2">
	<listeners>
		<listener class-name="listeners.TestAllureListener"></listener>
		<listener class-name="listeners.RetryAnalyzer"></listener>
		<listener class-name="listeners.AnnotationTransfer"></listener>
	</listeners>
	<test thread-count="2" name="Test1">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="tests.LoginTest">
				<methods>
					<include name="verifyValidLogin"></include>
				</methods>
			</class>
		</classes>
	</test> 

	<test thread-count="2" name="Test2">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="tests.LoginTest">
				<methods>
					<exclude name="verifyValidLogin"></exclude>
				</methods>
			</class>
		</classes>
	</test> 
</suite>  
